@page
@model Schedule_Project.Pages.Courses.CreateModel

@{
    string pageHandler;
    ViewData["Title"] = "Create Schedule";
    if (ViewBag.classexisted == "existed")
    {
        pageHandler = "CreateExisted";
    } else
    {   
        pageHandler = "CreateNew";
    }
}

<h1>Create</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post" asp-page-handler="@pageHandler">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.classexisted == "existed")
            {
                <div class="form-group">
                    <label asp-for="Schedule.ClassId" class="control-label"></label>
                    <select asp-for="Schedule.ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                </div>
            } else
            {
                <div class="form-group">
                    <label asp-for="Schedule.ClassId" class="control-label"></label>
                    <input asp-for="Schedule.ClassId" class="form-control">
                </div>

                <div class="form-group">
                    <label asp-for="@Model.DescriptionForClass" class="control-label"></label>
                    <input asp-for="DescriptionForClass" class="form-control">
                </div>
            }
            
            <div class="form-group">
                <label asp-for="Schedule.SubjectId" class="control-label"></label>
                <select asp-for="Schedule.SubjectId" class ="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.Room" class="control-label"></label>
                <input asp-for="Schedule.Room" class="form-control" />
                <span asp-validation-for="Schedule.Room" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.Teacher" class="control-label"></label>
                <select asp-for="Schedule.Teacher" class ="form-control" asp-items="ViewBag.Teacher"></select>
            </div>
