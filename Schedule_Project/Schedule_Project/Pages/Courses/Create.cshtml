                <label asp-for="Schedule.Season" class="control-label"></label>
                <input asp-for="Schedule.Season" class="form-control" />
                <span asp-validation-for="Schedule.Season" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.Year" class="control-label"></label>
                <input asp-for="Schedule.Year" class="form-control" />
                <span asp-validation-for="Schedule.Year" class="text-danger"></span>
