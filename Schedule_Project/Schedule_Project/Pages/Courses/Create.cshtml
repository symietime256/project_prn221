            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @if (ViewBag.classexisted == "existed")
                {
                    <input type="hidden" name="classexisted" value="@ViewBag.classexisted" />
                }
            </div>
        </form>
    </div>
</div>

@if (Model.ErrorMessage != null && Model.ErrorMessage != "")
{
    <div>
        <h3 style="color:red">@Model.ErrorMessage</h3>
    </div>
}

