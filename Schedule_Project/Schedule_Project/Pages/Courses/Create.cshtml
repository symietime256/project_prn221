                <label asp-for="Schedule.EndDate" class="control-label"></label>
                <input asp-for="Schedule.EndDate" class="form-control" />
                <span asp-validation-for="Schedule.EndDate" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Schedule.TypeOfSlot" class="control-label"></label>
                <select asp-for="Schedule.TypeOfSlot" class="form-control">
                    <option value="Morning">
                        Morning
