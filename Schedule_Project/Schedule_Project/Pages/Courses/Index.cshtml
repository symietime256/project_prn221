@page
@model Schedule_Project.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Course Information</h1>

<p>
    <a asp-page="Create" asp-route-classexisted="new">Create New Schedule for New Class</a>
</p>
<p>
    <a asp-page="Create" asp-route-classexisted="existed">Create New Schedule for Existed Class</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].SlotId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Season)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].TypeOfSlot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Slot1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Slot2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].HasSessionYet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule[0].TeacherNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Schedule) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Room)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlotId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfSlot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slot1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slot2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasSessionYet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class.ClassId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.SubjectId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherNavigation.TeacherId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
